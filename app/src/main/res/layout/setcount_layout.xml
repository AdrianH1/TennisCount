<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/setcount"
    android:weightSum="4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/count1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/layout_style">

        <TextView
            android:id="@+id/txt_count_player1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="Player 1"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_point_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point"
            android:layout_alignBaseline="@+id/edit_game_player1"
            android:layout_alignBottom="@+id/edit_game_player1"
            android:layout_toRightOf="@+id/txt_count_player1"
            android:layout_toEndOf="@+id/txt_count_player1"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" />

        <ImageView
            android:id="@+id/serve1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/tennis_ball"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_point_player1"
            android:layout_toEndOf="@+id/btn_point_player1"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edit_game_player1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/edit_current_player1"
            android:layout_alignEnd="@+id/edit_current_player1"
            android:layout_marginRight="61dp"
            android:layout_marginEnd="61dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="0"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edit_current_player1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_alignBaseline="@+id/edit_game_player1"
            android:layout_alignBottom="@+id/edit_game_player1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="0"
            android:textAlignment="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/count2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/layout_style">

        <TextView
            android:id="@+id/txt_count_player2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/white"
            android:text="Player 2" />

        <Button
            android:id="@+id/btn_point_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point"
            android:layout_alignBaseline="@+id/edit_game_player2"
            android:layout_alignBottom="@+id/edit_game_player2"
            android:layout_toRightOf="@+id/txt_count_player2"
            android:layout_toEndOf="@+id/txt_count_player2"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" />

        <ImageView
            android:id="@+id/serve2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/tennis_ball"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_point_player2"
            android:layout_toEndOf="@+id/btn_point_player2"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edit_game_player2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/edit_current_player2"
            android:layout_alignEnd="@+id/edit_current_player2"
            android:layout_marginRight="61dp"
            android:layout_marginEnd="61dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="0"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/edit_current_player2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_alignBaseline="@+id/edit_game_player2"
            android:layout_alignBottom="@+id/edit_game_player2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:text="0"
            android:textAlignment="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/functions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/layout_style">

        <Button
            android:id="@+id/btn_gameend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" End"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>